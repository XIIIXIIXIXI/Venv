<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Venv.Views.Pages.MonitoringPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxc="using:DevExpress.WinUI.Charts"
    xmlns:local="using:Venv.Views.Pages"
    xmlns:local2="using:Venv.Common.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <local2:ProgressBarScaleConverter x:Key="ProgressBarScaleConverter" />
    </Page.Resources>

    <StackPanel x:Name="MainStackPanel" Margin="20">
        <Grid>
            <Border Margin="20" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
                <StackPanel Margin="10">
                    <TextBlock Text="CPU Utilization % | VM1 | 1s granularity" FontWeight="Bold"/>

                    <dxc:CartesianChart Margin="30,0,30,25" SelectionMode="None" ToolTipEnabled="False">
                        <dxc:CartesianChart.AxisX>
                            <dxc:AxisX ShowLabels="True" ShowMajorGridlines="True" ShowMinorGridlines="True"
                               DateTimeMeasureUnit="Millisecond" DateTimeGridAlignment="Millisecond"
                               SideMargins="0" />
                        </dxc:CartesianChart.AxisX>
                        <dxc:CartesianChart.AxisY>
                            <dxc:AxisY ShowMajorGridlines="True" ShowMinorGridlines="True" VisualRangeStartValue="0" VisualRangeEndValue="100" />
                        </dxc:CartesianChart.AxisY>
                        <dxc:CartesianChart.Series>
                            <dxc:Series Data="{x:Bind ViewModel.CpuUsageChartDataSource}">
                                <dxc:Series.View>
                                    <dxc:LineSeriesView/>
                                </dxc:Series.View>
                            </dxc:Series>
                            <!-- Include additional series as needed -->
                        </dxc:CartesianChart.Series>
                    </dxc:CartesianChart>
                </StackPanel>
            </Border>
        </Grid>
        <Border Margin="20" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Margin="10">
                <!-- CPU Usage -->
                <TextBlock FontWeight="SemiBold" Text="CPU" />
                <Grid x:Name="ProgressBarContainer"
          Height="20"
          Margin="0,5"
          Background="LightGray"
          CornerRadius="10"
          SizeChanged="ProgressBarContainer_SizeChanged">
                    <Rectangle x:Name="FillRectangle"
                   Width="{x:Bind ViewModel.FillWidth, Mode=OneWay}"
                   HorizontalAlignment="Left"
                   Fill="Green"
                   RadiusX="10"
                   RadiusY="10" />
                </Grid>
                <TextBlock Margin="0,5" Text="{x:Bind ViewModel.CpuUsageText, Mode=OneWay}" />

                <!-- Cores Usage -->
                <TextBlock FontWeight="SemiBold" Text="Cores" />
                <ProgressBar Height="10"
                 Margin="0,5"
                 Foreground="Green"
                 Maximum="{x:Bind ViewModel.TotalCores, Mode=OneWay}"
                 Value="{x:Bind ViewModel.ActiveCores, Mode=OneWay}" />
                <TextBlock Margin="0,5" Text="{x:Bind ViewModel.CoreUsageText, Mode=OneWay}" />

                <!-- Memory Usage -->
                <TextBlock FontWeight="SemiBold" Text="Memory" />
                <ProgressBar Height="20"
                 Margin="0,5"
                 Foreground="Green"
                 Maximum="100"
                 Value="{x:Bind ViewModel.MemoryUsagePercentage, Mode=OneWay}" />
                <TextBlock Margin="0,5" Text="{x:Bind ViewModel.MemoryUsageText, Mode=OneWay}" />

                <TextBlock Margin="0,10" FontWeight="SemiBold" Text="Vm1" />
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
