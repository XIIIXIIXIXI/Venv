<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Venv.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Venv"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid x:Name="RootPanel" Background="{ThemeResource AncNormalLinearBackground}">
        <Frame x:Name="MainNavigationFrame" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="myButton"
                Background="{ThemeResource ButtonBackgroundThemeBrush}"
                Click="myButton_Click">
                Click Me
            </Button>
            <Button Command="{x:Bind ViewModel.NavigateButtonCommand}" Content="Navigate" />
        </StackPanel>
    </Grid>

</Window>
