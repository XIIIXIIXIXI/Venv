<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Venv.Views.Windows.NavigationFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Venv.Views.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="NavView"
                    PaneDisplayMode="Left"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="True"
                    AlwaysShowHeader="True"
                    SelectedItem="{x:Bind NavView.MenuItems[0], Mode=OneWay}">

        <NavigationView.MenuItems>
            <NavigationViewItem Content="Page 1" Icon="Document" Tag="Page1"/>
            <NavigationViewItem Content="Page 2" Icon="Edit" Tag="Page2"/>
            <NavigationViewItem Content="Page 3" Icon="Account" Tag="Page3"/>
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Page>
